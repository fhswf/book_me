{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "strict": false,
    "baseUrl": "./",
    "outDir": "./lib",
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "types": ["jest", "node"]
  },
  "include": [
    "src/*.ts",
    "src/test/intervalSet.spec.ts",
    "src/test/freeBusy.spec.ts"
  ],
  "exclude": ["node_modules"]
}
