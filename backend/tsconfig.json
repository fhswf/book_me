{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "strict": false,
    "baseUrl": "./",
    "outDir": "build",
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "./types",
      "node_modules/@types"
    ],
    "paths": {
      "*": [
        "*",
        "../client/src/*"
      ]
    }
  },
  "include": [
    "./**/*",
    "./.eslintrc.js"
  ],
  "exclude": [
    "./src/public/"
  ],
  
}