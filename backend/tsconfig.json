{
  "compilerOptions": {
    "module": "commonjs",
    "strict": false,
    "baseUrl": "./",
    "outDir": "build",
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "files": [
    "controller/google_controller.ts"
  ],
  "include": [
    "./**/*.ts",
    "./**/*.js",
    "./.eslintrc.js"
  ],
  "exclude": [
    "./src/public/"
  ]
}