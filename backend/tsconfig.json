{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "strict": false,
    "baseUrl": "./",
    "outDir": "build",
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*.ts",
    "server.spec.ts"
  ]
}