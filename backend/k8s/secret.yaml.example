apiVersion: v1
kind: Secret
metadata:
  name: bookme-secret
  labels:
    app: bookme
type: Opaque
stringData:
  # Email Configuration
  EMAIL_FROM: "noreply@example.com"
  EMAIL_PASSWORD: "changeme"
  # SMTP Authentication (Optional)
  SMTP_USER: "user"
  SMTP_PASSWORD: "password"
  
  # Security Secrets
  JWT_SECRET: "changeme-make-this-long-and-random"
  CSRF_SECRET: "changeme-make-this-long-and-random"
  
  # Google OAuth2 Credentials
  CLIENT_ID: "changeme"
  CLIENT_SECRET: "changeme"
  
  # OIDC Credentials
  OIDC_CLIENT_SECRET: "changeme"

  # Encryption Key
  ENCRYPTION_KEY: "changeme-must-be-32-bytes-long"
