{
    "all": true,
    "check-coverage": false,
    "reporter": [
        "lcov",
        "text"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "src/**/*.spec.tsx",
        "src/**/*.test.tsx",
        "src/test/**",
        "src/tests/**",
        "src/vite-env.d.ts",
        "coverage/**",
        "**/*.d.ts"
    ],
    "temp-dir": ".nyc_output",
    "report-dir": "coverage"
}