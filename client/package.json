  "scripts": {
    "start": "vite --force",
    "build": "vite build",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:coverage": "playwright test --reporter=html --reporter=json",
    "test:ci": "TZ=Europe/Berlin playwright test",
    "test:unit": "vitest run --coverage; yarn dlx junit-to-ctrf -o ctrf/client-unit-ctrf.json test-results/junit-report.xml",
    "coverage:report": "nyc report --reporter=lcov --reporter=text --temp-dir .nyc_output"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/eslint": "^9.6.1",
    "@types/jsdom": "^27",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-istanbul": "^4.0.15",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.11.1",
    "eslint-plugin-i18next": "^6.1.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "i18next-parser": "9.0.2",
    "i18next-scanner": "4.5.0",
    "jsdom": "^27.2.0",
    "nyc": "^17.1.0",
    "playwright-ctrf-json-reporter": "^0.0.27",
    "start-server-and-test": "^1.13.1",
    "typescript-eslint": "^8.48.1",
    "vite": "^5.4.7",
    "vite-plugin-istanbul": "^7.2.1",
    "vitest": "^4.0.15",
    "wait-on": "^5.3.0"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "execCwd": "..",
          "prepareCmd": "yarn exec node utility/patch-workspace-versions.js"
        }
      ],
      [
        "@dmeents/semantic-release-yarn",
        {
          "npmPublish": false,
          "changeVersion": true,
          "tarballDir": "build"
        }
      ],
      [
        "@semantic-release/exec",
        {
          "execCwd": ".",
          "prepareCmd": "yarn exec node ../utility/patch-k8s.js k8s/deployment.yaml"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md",
            "k8s/deployment.yaml"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github",
      [
        "@codedependant/semantic-release-docker",
        {
          "dockerTags": [
            "latest",
            "{{major}}-latest",
            "{{version}}",
            "{{git_sha}}"
          ],
          "dockerImage": "frontend",
          "dockerRegistry": "ghcr.io",
          "dockerProject": "fhswf/book_me",
          "dockerContext": ".."
        }
      ]
    ]
  }
}
